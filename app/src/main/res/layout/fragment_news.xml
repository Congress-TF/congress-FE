<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp"
    tools:context=".presentation.ui.news.NewsFragment">

    <SearchView
        android:id="@+id/sv_news_search"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:closeIcon="@drawable/search_clear"
        android:searchIcon="@drawable/search_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="@string/query_hint" />

    <LinearLayout
        android:id="@+id/layout_recommend_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/sv_news_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/main_brown"
            android:textSize="12sp"
            app:strokeColor="@color/gray_4"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp"
            android:includeFontPadding="false"
            android:paddingHorizontal="14dp"
            android:layout_marginEnd="10dp"
            android:text="@string/recommend_button_text_long"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/main_brown"
            android:textSize="12sp"
            app:strokeColor="@color/gray_4"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp"
            android:includeFontPadding="false"
            android:paddingHorizontal="14dp"
            android:layout_marginEnd="10dp"
            android:text="@string/recommend_button_text_short"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/main_brown"
            android:textSize="12sp"
            app:strokeColor="@color/gray_4"
            app:strokeWidth="1dp"
            app:cornerRadius="10dp"
            android:includeFontPadding="false"
            android:paddingHorizontal="14dp"
            android:layout_marginEnd="10dp"
            android:text="@string/recommend_button_text_short"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_news_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_recommend_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>